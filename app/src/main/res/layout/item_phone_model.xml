<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    >

    <!-- Phone Image -->
    <ImageView
        android:id="@+id/modelImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:contentDescription="Phone model image"/>

    <!-- Phone Info (Name and Price) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Phone Name -->
        <TextView
            android:id="@+id/modelNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Model"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Phone Price -->
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $XXX"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Buy Now Button -->
    <Button
        android:id="@+id/buyNowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:textStyle="bold"
        android:padding="8dp"
        android:backgroundTint="@color/app_background_theme"
        android:layout_gravity="center_vertical"
        android:onClick="buyNowButtonClick"/>
</LinearLayout>
